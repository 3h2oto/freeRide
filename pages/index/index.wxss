/**index.wxss**/
.swiper{height:370rpx;}
.slide-image{width:100%;height:370rpx;}
.main{padding:30rpx;}
.search{position: relative;padding:20rpx 0;margin:0 30rpx;}
.search-input{border:1px solid #ddd;border-radius:30rpx;font-size:13px;padding:10rpx 60rpx 10rpx 20rpx;}
.icon-search{width:40rpx;height:60rpx;position: absolute;top:50%;margin-top:-16rpx;right:13px;}
.title{font-size:15px;margin-bottom:20rpx;position: relative;padding:10rpx 20rpx;}
.title::before{content:'';position: absolute;left:0rpx;top:14rpx;bottom:14rpx;border: 2px solid #00a43e;}
.car-item{font-size:13px;color:#666;line-height:48rpx;padding:20rpx;background-color: #fff;margin-bottom:16rpx;border-radius:10rpx;}
.car-item .label{display:inline-block;width:140rpx;text-align: right;color:#333;}
.loadmore{text-align: center;font-size:13px;color:#666;padding:20rpx 0;}
.addCar{width:100rpx;height:100rpx;text-align: center;background-color: #00a43e;color:#fff;font-size:15px;line-height:36rpx;border-radius:50%;
  padding:14rpx 20rpx;box-sizing: border-box;position: fixed;right:10rpx;bottom:100rpx;}
.wd50{float: left;width:50%;}