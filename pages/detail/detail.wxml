
<view class="page-detail">
  <view class="car-item">
    <view class="orderStatus wbox">
      <text class="wbox-flex">{{item.orderType===1?"车找人":"人找车"}}</text>
      <view wx:if="{{item.orderStatus===1}}" class="status wbox-flex">
        进行中<icon class="iconfont icon-arrow" size="12px" />
      </view>
      <view wx:elif="{{item.orderStatus===2}}" class="status wbox-flex end">
        已完成<icon class="iconfont icon-arrow" size="12px" />
      </view>
      <view wx:elif="{{item.orderStatus===3}}" class="status wbox-flex end">
        已过期<icon class="iconfont icon-arrow" size="12px" />
      </view>
      <view wx:else class="status wbox-flex end">
        已关闭<icon class="iconfont icon-arrow" size="12px" />
      </view>
    </view>
    <view class="item address bdb" >
      {{detail.startPlace}}
      <icon class="iconfont icon-to" size="14px"/>  
      {{detail.destination}}
    </view>
    <!-- <view class="startPlace ">
      <text class="label">始发地：</text>{{detail.startPlace}}
    </view>
    <view class="endPlace ">
      <text class="label">目的地：</text>{{detail.destination}}
    </view> -->
    <view class="time">
      <text class="label">出发时间：</text>{{detail.startTime}}
      
    </view>
    <view class="personNum">
      <text class="label">可乘坐：</text>{{detail.seatCount}}人
    </view>
    <view class="person">
      <text class="label">联系人：</text>{{detail.contact}}
    </view>
    <view class="tel">
      <text class="label">联系电话：</text>{{detail.mobile}}
      <icon class="iconfont icon-phone" size="14px" bindtap="tel"/>  
    </view>
    <view class="mark" wx:if="{{detail.mark}}">
        <text class="label">备注信息：</text>{{detail.mark}}
    </view>
