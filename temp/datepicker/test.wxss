

/*mask*/
.time-mask{position: fixed;top:0;bottom:0;right: 0;left: 0;background-color: rgba(0,0,0,.5);z-index:10;}
.time-main{width: 100%;position: fixed; bottom: 0;left: 0;z-index: 11;background-color: #fff;overflow: hidden;}
.time-hd{height:50px;line-height:50px;text-align: center;padding:0 15px;display:flex;}
.checked-time{flex:1;color:#333;}
.sure{color:#00a43e;}
.cancel{color:#999;}
.time-title-wrap{border-top:1px solid #f7f7f7;height:30px;line-height:30px;font-size:14px;}
.time-title{float:left;width:20%;text-align:center;color:#999;}
.time-bd{width: 100%; height:200px;}
.time-item{line-height:50px;}
.picker-text{text-align:center;}